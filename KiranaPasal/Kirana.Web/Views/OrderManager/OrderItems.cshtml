@model IEnumerable<Kirana.Core.Models.OrderItem>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>Line Order</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img  src="~/Content/ProductImages/@item.Image " alt="@item.ProductName" style="height:50px" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        
        <td>
            Rs @String.Format("{0}", item.Price * item.Quantity)            
        </td>
    </tr>
}
    <tr>
        <td colspan="3" style="text-align:right;">
            <strong>
                Order Total
            </strong>
        </td>
        <td>
            Rs @string.Format("{0}",(from p in Model select p.Quantity * p.Price).Sum())
        </td>
    </tr>  

</table>
